<!DOCTYPE html>
<html>
<head>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script> 
$(document).ready(function(){
  $("img").click(function(){
    $(".clicked").animate({ 
      marginLeft: '100px',
      opacity:'0,5',
      width:'100px'
    }, 1000);
    
    $(this).addClass("clicked").animate({
      marginLeft: '550px',
      width:'500px'
    }, 1000);
	
    $("img").not(this).animate({
      right:'250px',
      opacity:'0.5',
      width:'100px'
    }, 1000);
});

  $("img").mouseover(function(){
    $(this).fadeTo(500, 1);
  });
  $("img").mouseout(function(){
    $(this).not(".clicked").fadeTo(500, 0.5);
  });
});
</script> 

<style>
img{
margin-left: 100px;
width: 100px;
}
</style>
</head>
